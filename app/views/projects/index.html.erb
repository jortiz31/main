<article ng-app="projects" ng-controller="ProjectSearchController">

  <div class="row align-center">
    <div class="medium-10 columns">
      <header>
        <h4 class="text-center">Filter</h4>
      </header>
    </div>
  </div>

  <div class="row align-center">
    <div class="medium-10 columns">
      <form>
        <div class="input-group">
          <label for="keywords" class="input-group-label">keywords</label>
          <input type="text"
          name="keywords"
          class="input-group-field"
          placeholder="React, Rails, etc.."
          ng-model="keywords">
          <div class="input-group-button">
            <button class="button" ng-click="search(keywords)">Search</button>
          </div>
        </div>
      </form>
      <h1 class="searchedFor" ng-if="searchedFor">
        <small>Searched For: </small> {{searchedFor}}
      </h1>
    </div>
  </div>



  <div class="row align-center">
    <div class="medium-10 columns">
      <header>
        <h5>Results</h5>
      </header>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
      <div ng-repeat="project in projects">
        {{project.name}}

      </div>
    </div>
  </div>

</article>
